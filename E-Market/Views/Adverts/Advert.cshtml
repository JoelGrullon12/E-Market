@using E_Market.Core.Application.ViewModels.Adverts
@model AdvertDetailViewModel
@{
    ViewData["Title"] = Model.Name;
    int i = 1;
}

<div class="row col-12">

    <div class="col-md-6">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                
                @foreach(string img in Model.ImgUrls)
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" aria-label="Slide @i+1"></button>
                    i++;
                }
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="@Model.ImgUrl1" class="d-block w-100" alt="Imagen de @Model.Name">
            </div>

                @foreach(string img in @Model.ImgUrls)
                {
                    <div class="carousel-item">
                      <img src="@img" class="d-block w-100" alt="Imagen de @Model.Name">
                    </div>
                }
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
    </div>


    <div class="col-md-5 offset-1">
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
        <h5>@Model.Category</h5>
        <h5>$@Model.Price</h5>
        <div class="row">
            <a asp-controller="Adverts" asp-action="Index" class="btn btn-outline-primary col-md-4 offset-2" style="margin-right:10px;">Volver</a>
            <button type="button" class="btn btn-outline-primary col-md-4" style="margin-left:10px;" onclick="buy()">Añadir al carrito</button>
        </div>

        <div class="card" style="margin: 20px auto;">
          <div class="card-header">
            Datos del vendedor
          </div>
          <div class="card-body">
            <h5 class="card-title">@Model.User</h5>
            <p class="card-text">
                Telefono: @Model.Phone<br />
                <a href="mailto:@Model.Email">@Model.Email</a>
            </p>
          </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/AdvertDetails.js"></script>