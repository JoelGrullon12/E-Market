@using E_Market.Core.Application.ViewModels.Category
@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Categorias";
}

<div class="row mb-3">
    <h2 class="col-3">
        Categorias
    </h2>
    <div class="col-3 offset-6">
        <a class="btn btn-outline-success" asp-controller="Categories" asp-action="Create">Añadir Categoria</a>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 g-4">

    @foreach(var item in Model){
      <div class="col">
         <div class="card">
          <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">@item.Description</p>
            <a asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
            <a asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
          </div>
        </div>
      </div>
    }


</div>